<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd"
        >

    <preConditions>
        <dbms type="mysql"/>
    </preConditions>
    <property name="table.name" value="server_info"/>
    <property name="schema" value="log_db"/>
    <changeSet id="create.table" author="CM">
        <sql>
            use ${schema};
        </sql>
        <createTable tableName="${table.name}" schemaName="${schema}">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="real_ip" type="varchar(40)" remarks="服务器真实IP地址"/>
            <column name="real_port" type="varchar(20)" remarks="服务器真实端口"/>
            <column name="server_name" type="varchar(100)" remarks="服务器名称"/>
        </createTable>
    </changeSet>
</databaseChangeLog>