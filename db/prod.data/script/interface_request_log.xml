<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd"
>

    <preConditions>
        <dbms type="mysql"/>
    </preConditions>
    <property name="table.name" value="interface_request_log"/>
    <property name="schema" value="log_db"/>
    <changeSet id="create.table" author="CM">
        <sql>
            use ${schema};
        </sql>
        <createTable tableName="${table.name}" schemaName="${schema}">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="interface_id" type="bigint"/>
            <column name="log_time" type="timestamp"/>
            <column name="request_amount" type="bigint"/>
        </createTable>
        <addAutoIncrement
                columnDataType="bigint"
                columnName="id"
                schemaName="${schema}"
                tableName="${table.name}"/>
        <addForeignKeyConstraint baseColumnNames="interface_id"
                                 baseTableName="${table.name}"
                                 constraintName="fk_iql_sid"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="interface_info"/>
    </changeSet>
    <changeSet id="add.response_time.column" author="CM">
        <addColumn tableName="${table.name}">
            <column name="average_response_time" type="bigint"></column>
        </addColumn>
    </changeSet>

</databaseChangeLog>